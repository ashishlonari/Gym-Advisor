<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8DAD0"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Spinner
        android:id="@+id/workselect"
        android:layout_width="221dp"
        android:layout_height="79dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="35dp"
        android:entries="@array/workout_type"
        android:popupBackground="#ffffff" />

    <TextView
        android:id="@+id/workout"
        android:layout_width="292dp"
        android:layout_height="93dp"
        android:layout_below="@+id/workbutton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="26dp"
        android:text="@string/here_workout"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/workbutton"
        android:layout_width="251dp"
        android:layout_height="72dp"
        android:layout_below="@+id/workselect"
        android:layout_alignParentStart="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="80dp"
        android:onClick="workoutdetails"
        android:text="@string/clickforworkout" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="138dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/bowlby_one"
        android:text="@string/gym"
        android:textSize="36sp" />

</RelativeLayout>